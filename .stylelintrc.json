      "overscroll-behavior",
      "scroll-behavior",

      "scroll-snap-type",

      "scroll-snap-align",
      "scroll-snap-stop",
      "scroll-padding",

      "scroll-margin",
      "scrollbar-width",
      "scrollbar-color"
    ]
  }
}
