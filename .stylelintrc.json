      "outline-color",

      "outline-offset",

      "background",
      "background-color",
      "background-image",
      "background-repeat",
      "background-position",
      "background-size",
      "background-clip",
      "background-origin",

      "background-attachment",

      "background-blend-mode",

      "box-shadow",

      "color",
      "font",

      "font-family",

      "font-size",

      "font-weight",
      "font-style",
      "font-variant",
      "font-size-adjust",

      "font-stretch",
      "font-smoothing",
      "font-feature-settings",

      "font-kerning",
      "font-variant-ligatures",

      "font-variant-caps",

      "font-variant-numeric",
      "font-variant-east-asian",

      "font-variant-alternates",
      "text-align",
      "text-align-last",

      "text-transform",
      "text-decoration",

      "text-decoration-line",
